                </div>
            </div>
            <div class="set2">
                <div><a href="/home">
                <img src="https://www.mytheresa.com/skin/frontend/mytheresa/default/images/logo.png?v=20220318T121226" id="logo"></img></a>
                </div>
                <div class="bag"><a href="/cart">
                    <span>Shopping Bag</span>
                     <img src="https://img.icons8.com/external-justicon-lineal-justicon/2x/external-shopping-bag-ecommerce-justicon-lineal-justicon.png" alt="" />
                    </a>
                  </div>
            </div>
            <div class="set3">
            <div class="">
                <a href="#">NEW ARRIVALS</a>
                <a href="#">DESIGNERS</a>
                <a href="#">CLOTHING</a>
                <a href="#">SHOES</a>
                <a href="#">BAGS</a>
                <a href="#">ACCESSORIES</a>
                <a href="#">SALE</a>            
            </div>
            <div class="nav-search">
                <input type="search" id=""
                    placeholder="Search for...." />
                <img src="https://t3.ftcdn.net/jpg/01/91/82/02/240_F_191820274_urGUeyW2HNudPI1oaMMnQZbyk6WYE5Ey.jpg" alt="">
            </div>
        </div>
        </div>
    </div>
        <hr>
    
<div id="container">
    
    <div id="left_view_cart">
        <h3 id="cart_item" >Total Items (<%= cart.length %>) </h3>

        <% cart.forEach(cart => { %>

            <div id="cart_view">
                <div id="top_view">
                    <div id="left_top_view">
                        <img src="<%= cart.product_image %>">
                        <h4><%= cart.product_name %></h4>
                    </div>
                </div>

                <div id="bottom_view">
                    <p> Amount 
                        <div class="proPrice">
                            â‚¹ <%= cart.price %>
                        </div>
                    </p>
                </div>
            </div>
            
        <% }) %>
        
    </div>

    <div id="right_view_cart">
        <div class="cards-container">
            <div >
                <p>Amount payable : <span id="total_amount">0</span></p>
            </div>

            <div id="upi" data-type="upi">
                <div class="flex align_center">
                    <div>
                        <img src='/icons/bhim.svg' alt="" width="40">
                    </div>
                    <div>
                        <p >UPI Payment</p>
                        <form action="" method="post" enctype="" id="upiData" class="payment-detail">
                            <input type="text" name="" id="vpa" class="underline inputBox" placeholder="Enter UPI ID"></input>
                            <button type="submit" class="turkishButtons">Pay via upi id</button>
                        </form>
                    </div>

                </div>
            </div>

            <div id="netBanking" data-type="netBanking">
                <div class="flex align_center">
                    <div>
                        <img src="/icons/net-banking.svg" alt="" width="40">
                    </div>
                    <div>
                        <p>Pay via net banking</p>
                        <form action="" id="netBankingData" class="payment-detail">
                            <input type="text" name="" id="username" class="underline inputBox" placeholder="Enter Net Banking">
                            <button type="submit" class="turkishButtons">Pay via net banking id</button>

                        </form>
                    </div>
                </div>
            </div>

            <div id="creditCard" data-type="creditCard">
                <div class="flex align_center" id="last_div">
                    <div>
                        <img src="/icons/credit-card.svg" alt="" width="40">

                    </div>
                    <div>
                        <p>PAY VIA CREDIT CARD</p>
                        <form action="" id="creditCardData" class="payment-detail">
                            <input type="text" name="" id="creditCardNumber" class="underline inputBox" placeholder="Enter Credit Card Number">
                            <button type="submit" class="turkishButtons">Pay with creditCard</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
<script src="/scripts/payment.js"></script>
