                <div id="monthlySip" class="whenClicked">EMI</div>
            </div>
            <div id="paymentOpt"> 
                <div id="sipAmount">
                    <div id="inputLabel">EMI Amount</div>
                    <input type="number" id="sipAmountInput" placeholder="0" max="100000">
                </div>
                <div id="sipCal">
                    <div id="dateLabel">Monthly EMI Date</div>
                    <input type="date" id="sipCalInput" value="2021-11-15" data-date-format="YYYY MM DD" onchange="calendar()">
